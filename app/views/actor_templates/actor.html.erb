<div><a href="/">Home</a></div>
<h1> Actor #<%=@actor_id%> details</h1>
<div><a href="/movies">Go Back</a></div>

<dl>
  <dt>Name</dt>
  <dd><%=Actor.where({:id => @actor_id})[0].name%></dd>

  <dt>Dob</dt>
  <dd><%=Actor.where({:id => @actor_id})[0].dob%></dd>

  <dt>Bio</dt>
  <dd><%=Actor.where({:id => @actor_id})[0].bio%></dd>

  <dt>Image</dt>
  <dd><img src=<%=Actor.where({:id => @actor_id})[0].image%>></dd>
  
  <dt>Created at</dt>
  <%current_year=Date.today.year%>
  <dd>about <%=current_year - (Actor.where({:id => @actor_id})[0].created_at.year)%> years ago</dd>

  <dt>Updated at</dt>
  <dd>about <%=current_year - (Actor.where({:id => @actor_id})[0].updated_at.year)%> years ago</dd>
</dl>

<h1>Filmography</h1>

<%characters = Character.where({:actor_id => @actor_id})%>

<table border="1">
  <tr> <!--table heading-->
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>
  <% characters.each do |character|%>
      <% movie=Movie.where({:id => character.movie_id})[0] %>
      <tr> <!--rows with actor data -->
        <td><%=movie.title%></td>
        <td><%=movie.year%></td>
        <td><%=Director.where({:id => movie.director_id})[0].name%></td>
        <td><%=character.name%></td>
        <td><a href="/movies/<%=character.movie_id%>" target="_blank">Show Details</a></td>
      </tr>
  <%end%>
</table>
